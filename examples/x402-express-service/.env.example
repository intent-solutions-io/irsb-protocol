# Server Configuration
PORT=3000
HOST=localhost

# RPC & Chain Configuration
RPC_URL=https://rpc.sepolia.org
CHAIN_ID=11155111

# Service Identity
# Use the deployer private key from .env in project root
SERVICE_PRIVATE_KEY=0x...your-private-key-here...
# Registered solver ID on Sepolia (operator: 0x83A5F432f02B1503765bB61a9B358942d87c9dc0)
SERVICE_SOLVER_ID=0xdf816d7b86303c3452e53d84aaa02c01b0de6ae23c1e518bd2642870f9f7603b

# IRSB Contract Addresses (Sepolia)
IRSB_HUB_ADDRESS=0xD66A1e880AA3939CA066a9EA1dD37ad3d01D977c
# Optional: for commerce mode
IRSB_ESCROW_ADDRESS=0x...escrow-vault-address...

# x402 Payment Configuration
# Price for API calls (in wei)
PRICE_WEI=1000000000000000
# Accepted payment asset
PAYMENT_ASSET=ETH

# Optional: Client signer for dual attestation
# If not set, only solver signature will be used
CLIENT_PRIVATE_KEY=

# Service Domain (for route hash)
SERVICE_DOMAIN=api.example.com

# Optional: Post receipts on-chain automatically
# If true, the service will post receipts to IntentReceiptHub
# If false (default), client is responsible for posting
POST_RECEIPTS_ON_CHAIN=false

# Optional: Service wallet for receiving payments
# Clients should send ETH here before calling the API
SERVICE_WALLET=0x...your-service-wallet-address...

# Payment verification mode
# Set to "true" to skip on-chain verification (testing only!)
SKIP_PAYMENT_VERIFICATION=false
